[Unit]
Description=ERP Dashboard (Flask via gunicorn)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/erp/dashboard
EnvironmentFile=-/etc/erp_sync.env
ExecStart=/opt/erp/dashboard/venv/bin/gunicorn --workers 2 --bind 0.0.0.0:8080 app:app
User=ubuntu
Group=ubuntu
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
